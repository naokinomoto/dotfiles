window class_only: %w(chromium) do
  remap 'C-b', to: 'Left'
  remap 'C-f', to: 'Right'
  remap 'C-p', to: 'Up'
  remap 'C-n', to: 'Down'

  remap 'M-b', to: 'Ctrl-Left'
  remap 'M-f', to: 'Ctrl-Right'

  remap 'C-a', to: 'Home'
  remap 'C-e', to: 'End'

  remap 'C-k', to: ['Shift-End', 'Ctrl-x']
  remap 'C-y', to: 'C-v'

  remap 'C-d', to: 'Delete'
  remap 'M-d', to: 'Ctrl-Delete'

  remap 'C-h', to: 'BackSpace'
  remap 'C-m', to: 'Return'

  %w[a z x c v w t l].each do |key|
    remap "Alt-#{key}", to: "C-#{key}"
  end
end

window class_only: %w(chromium) do
  remap "Alt-s", to: "C-f"
end



